<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th scope="col" class="text-center">Date de la consultation</th>
    <th scope="col" class="text-center">Patient</th>
    <th scope="col" class="w-25 text-center" >Note</th>
    <th scope="col" colspan="3" class="text-center">Actions</th>
  </tr>
  </thead>
  <tbody>
  <% consultations.each do |consultation| %>
    <tr>
      <td class="text-center"><%= consultation.schedule_time&.strftime("%Y/%m/%d %Hh%M") %></td>
      <td class="text-center"><%= link_to consultation.patient, patient_path(consultation.patient) %></td>
      <td class="w-25 text-center"><%= consultation.note&.truncate(30) %></td>
      <td class="text-center"><%= link_to 'Voir', consultation, class: 'btn btn-outline-primary'  %></td>
      <td class="text-center"><%= link_to 'Modifier', edit_consultation_path(consultation), class: 'btn btn-outline-secondary' %></td>
      <td class="text-center"><%= link_to 'Supprimer', consultation, method: :delete, data: { confirm: "Êtes-vous sûr ? " }, class: 'btn btn-outline-danger' %></td>
    </tr>
  <% end %>
  </tbody>
</table>
