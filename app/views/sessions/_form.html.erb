<%= simple_form_for @session do |f| %>
  <% if session.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(session.errors.count, "error") %> prohibited this session from being saved:</h2>
      <ul>
        <% session.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="w-25">
    <%= f.label :schedule_time, label: 'Date de la consultation' %> <br/>
    <%= render partial: 'layouts/datetimepicker', locals: {name: 'session[schedule_time]', value: @session.schedule_time} %>
  </div>
  <div style="width: 15rem;">
    <%= f.input :patient_id, collection: @therapist.patients %>
  </div>
  <%= f.button :submit, value: 'Valider' %>
<% end %>
